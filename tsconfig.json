{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "rootDir": "api",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./build",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  }
}